@{
    ViewBag.Title = "Admin Panel";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>@ViewBag.User_ID</h2>
</hgroup>

@{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <h3>Employee Details</h3>
    @Html.ActionLink("View Locked Accounts", "lockedAccounts", "AdminPanel");
    <br />
    @Html.ActionLink("Reset Password", "reset", "AdminPanel");
    <br />
    @Html.ActionLink("Settle Claims", "settle", "AdminPanel");
    <br />
    @Html.ActionLink("View Closed Requests", "closedRequests", "AdminPanel");
    <h3>Agent Details</h3>
    @Html.ActionLink("Add New Agents", "addAgent", "AdminPanel");
    <br />
    @Html.ActionLink("Block/Unblock Agent", "manageAgent", "AdminPanel");
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
