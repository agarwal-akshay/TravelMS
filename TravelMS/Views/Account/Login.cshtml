@model TravelMS.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

<section id="loginForm">
    <h2>Choose your role and enter credentials</h2>
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Log in Form</legend>
            @Html.RadioButton("Role", "Emp", new { @checked = "checked" }) Employee
            <br />
            @Html.RadioButton("Role", "Admin") Admin
            <br />
            @Html.RadioButton("Role", "Agent") Agent
            <ol>
                <li>
                    @Html.LabelFor(m => m.User_ID)
                    @Html.TextBoxFor(m => m.User_ID)
                    @Html.ValidationMessageFor(m => m.User_ID)
                </li>
                <li>
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password)
                    @Html.ValidationMessageFor(m => m.Password)
                </li>
                @*<li>
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                </li>*@
            </ol>
            <input type="submit" value="Log in" />
        </fieldset>
        <p>
            @Html.ActionLink("Register", "Register") if you don't have an account.
        </p>
    }
</section>
