@model List<TravelMS.Models.NewTravelRequestModel>

@{
    ViewBag.Title = "ViewTravelRequests";
}

<h2>List of your travel requests</h2>
    <table>
        <tr>
            <th>Travel Request ID</th>
            <th>Employee ID</th>
            <th>Trip Name</th>
            <th>Travel Type (Purpose)</th>
            <th>Travel Date</th>
            <th>Mode of Travel</th>
            <th>Travel Class</th>
            <th>Source City</th>
            <th>Destination City</th>
            <th>Time (hh:mm)</th>
            <th>Approver</th>
            <th>Agent ID</th>
            <th>Request Status</th>
            <th>Accomodation Status</th>
            <th>Remarks</th>
        </tr>
        @foreach (var item in @Model)
        {
            <tr>
                <td>
                    @(item.Travel_Request_ID)
                </td>
                <td>
                    @(item.Emp_ID)
                </td>
                <td>
                    @(item.Trip_Name)
                </td>

                <td>
                    @(item.Travel_Type_Purpose)
                </td>

                <td>
                    @(item.Travel_Date)
                </td>
                <td>
                    @(item.Mode_of_Travel)
                </td>

                <td>
                    @(item.Travel_Class)
                </td>

                <td>
                    @(item.Source_City)
                </td>

                <td>
                    @(item.Destination_City)
                </td>

                <td>
                    @(item.Travel_Time_hh):@(item.Travel_Time_mm)
                </td>

                <td>
                    @(item.First_Level_Approver)
                </td>

                <td>
                    @(item.Agent_ID)
                </td>

                <td>
                    @(item.Request_Status)
                </td>

                <td>
                    @(item.Acco_Status)
                </td>

                <td>
                    @(item.Remarks)
                </td>
            </tr>
        }
    </table>
<p>
    @Html.ActionLink("Back to Dash", "Index")
</p>
